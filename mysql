import mysql.connector
from mysql.connector import Error


def connect():
    """ Connect to MySQL database """
    conn = None
    try:
        conn = mysql.connector.connect(host='localhost',
                                       database='ditdatabasenavn',
                                       user='ditbrugernavn',
                                       password='ditpassword')
     
        if conn.is_connected():
            print('Connected to MySQL database')
            myCursor = conn.cursor()
            myCursor.execute("create table if not exists users(id int primary key auto_increment, name varchar(255), password varchar(255) )")
            #myCursor.execute("SHOW TABLES")
            un = input("username: ")
            pw = input("password: ")
            myCursor.execute("insert into users(name, password) values(%s, %s)", (un, pw))  
            conn.commit()
            print(myCursor)

    except Error as e:
        print("fejl")
        print(e)

    finally:
       if conn is not None and conn.is_connected():
           conn.close()
    

if __name__ == '__main__':
    connect()

    

